<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pfe.nova.Controller.SignupController"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 20;">

    <ComboBox fx:id="roleComboBox" 
              promptText="Select Role"
              style="-fx-pref-width: 300px; -fx-pref-height: 40px"/>

    <TextField fx:id="nomField"
               promptText="Nom"
               style="-fx-pref-width: 300px; -fx-pref-height: 40px"/>

    <TextField fx:id="prenomField"
               promptText="Prenom"
               style="-fx-pref-width: 300px; -fx-pref-height: 40px"/>

    <TextField fx:id="emailField"
               promptText="Email"
               style="-fx-pref-width: 300px; -fx-pref-height: 40px"/>

    <TextField fx:id="telField"
               promptText="Telephone"
               style="-fx-pref-width: 300px; -fx-pref-height: 40px"/>

    <TextField fx:id="adresseField"
               promptText="Adresse"
               style="-fx-pref-width: 300px; -fx-pref-height: 40px"/>

    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   style="-fx-pref-width: 300px; -fx-pref-height: 40px"/>

    <PasswordField fx:id="confirmPasswordField"
                   promptText="Confirm Password"
                   style="-fx-pref-width: 300px; -fx-pref-height: 40px"/>

    <!-- Dynamic fields container -->
    <VBox fx:id="dynamicFieldsContainer" spacing="10"/>

    <Button text="Sign Up"
            fx:id="signupButton"
            onAction="#handleSignup"
            style="-fx-pref-width: 300px; -fx-pref-height: 40px"/>

    <Label fx:id="errorLabel"
           style="-fx-text-fill: #e74c3c; -fx-font-size: 15px;"
           visible="false"/>
</VBox>