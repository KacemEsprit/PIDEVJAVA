<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pfe.nova.Controller.DashboardController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #3498db; -fx-padding: 10;">
            <Label text="OncoKidsCare" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button fx:id="createRapportButton" text="Create Report" onAction="#handleCreateRapport"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
            <Button fx:id="viewRapportsButton" text="View Reports" onAction="#handleViewRapports"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
            <Button text="Community Posts" onAction="#navigateToPostList"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
            <Button text="Appointments" onAction="#handleAppointmentsNavigation"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
            <Button text="Chat" onAction="#handleChatNavigation"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
            <Button fx:id="rapportRendezVousButton" text="Rapport RendezVous" onAction="#handleRapportRendezVous"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white;" visible="false" managed="false"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button text="Mes Commandes" onAction="#handleOrder"
                    style="-fx-background-color: #7f8c8d; -fx-text-fill: white;"/>
            <Button text="Profile" onAction="#showProfile"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white;"/>
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #ecf0f1; -fx-border-width: 1;">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label fx:id="nameLabel"/>
            <Label fx:id="emailLabel"/>
            <Label fx:id="phoneLabel"/>
            <Label fx:id="addressLabel"/>
            <VBox fx:id="roleSpecificContent" spacing="5"/>
            <Label fx:id="sessionTestLabel"/>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <StackPane fx:id="contentArea" alignment="CENTER">
            <Label text="Select an option from the navigation bar" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
        </StackPane>
    </center>

    <!-- Hidden TabPane for Legacy Functionality -->
    <bottom>
        <TabPane fx:id="patientsTab" visible="false">
            <Tab fx:id="patientsTabItem" text="Patients">
                <VBox fx:id="patientsContainer"/>
            </Tab>
            <Tab fx:id="findDoctorsTabItem" text="Find Doctors">
                <VBox fx:id="doctorsContainer"/>
            </Tab>
            <Tab fx:id="adminTabItem" text="Admin"/>
            <Tab fx:id="appointmentsTabItem" text="Appointments">
                <VBox fx:id="appointmentsContainer"/>
            </Tab>
            <Tab fx:id="donationsTabItem" text="Donations"/>
            <Tab fx:id="createRapportTabItem" text="Create Rapport"/>
            <Tab fx:id="viewRapportTabItem" text="View Rapport"/>
        </TabPane>
    </bottom>

</BorderPane>