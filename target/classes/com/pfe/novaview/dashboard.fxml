<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pfe.nova.Controller.DashboardController"
            prefWidth="1000"
            prefHeight="700">
            
    <stylesheets>
        <URL value="@styles/admin-styles.css" />
    </stylesheets>
    
    <top>
        <!-- Add this inside the top HBox, next to the logout button -->
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="admin-header">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label fx:id="welcomeLabel" styleClass="content-title"/>
            <Label fx:id="sessionTestLabel" styleClass="session-label"/>
            <Button text="Logout" fx:id="logoutButton" onAction="#handleLogout" styleClass="delete-button"/>
        </HBox>
    </top>

    <center>
        <TabPane fx:id="contentTabPane">
            <Tab text="Profile" closable="false">
                <VBox spacing="15" styleClass="content-container">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    
                    <Label fx:id="nameLabel" styleClass="profile-label"/>
                    <Label fx:id="emailLabel" styleClass="profile-label"/>
                    <Label fx:id="phoneLabel" styleClass="profile-label"/>
                    <Label fx:id="addressLabel" styleClass="profile-label"/>
                    <VBox fx:id="roleSpecificContent" spacing="10"/>
                    
                    <Button text="Community Posts" fx:id="communityPostsButton" 
                            onAction="#navigateToPostList" styleClass="action-button"/>
                    <Button text="Create Report" fx:id="createRapportButton" 
                            onAction="#handleCreateRapport" styleClass="action-button"/>
                    <Button text="View Reports" fx:id="viewRapportsButton" 
                            onAction="#handleViewRapports" styleClass="action-button"/>
                </VBox>
            </Tab>

            <Tab text="Patients List" fx:id="patientsTab">
                <TableView fx:id="patientsTable" styleClass="content-table">
                    <columns>
                        <TableColumn fx:id="patientNameColumn" text="Name"/>
                        <TableColumn fx:id="patientEmailColumn" text="Email"/>
                        <TableColumn fx:id="patientAgeColumn" text="Age"/>
                        <TableColumn fx:id="patientGenderColumn" text="Gender"/>
                        <TableColumn fx:id="patientBloodTypeColumn" text="Blood Type"/>
                    </columns>
                </TableView>
            </Tab>

            <!-- Add this after the Patients List tab -->
            <Tab text="Doctors List" fx:id="doctorsTab">
                <TableView fx:id="doctorsTable" styleClass="content-table">
                    <columns>
                        <TableColumn fx:id="doctorNameColumn" text="Name"/>
                        <TableColumn fx:id="doctorEmailColumn" text="Email"/>
                        <TableColumn fx:id="doctorSpecialityColumn" text="Speciality"/>
                        <TableColumn fx:id="doctorExperienceColumn" text="Experience"/>
                        <TableColumn fx:id="doctorDiplomeColumn" text="Diplome"/>
                    </columns>
                </TableView>
            </Tab>

            <!-- Keep other tabs with similar styling -->
        </TabPane>
    </center>
</BorderPane>
