<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.effect.DropShadow?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pfe.nova.Controller.TodoListController"
            style="-fx-background-color: #f1f5f9;">

    <!-- TOP : Bonjour + slogan -->
    <top>
        <VBox spacing="10" style="-fx-padding: 30;">
            <Label text="Bienvenue dans Votre Pharmacie"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #212529;" />
            <Label text="Des médicaments pour soigner, du cœur pour accompagner"
                   style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
        </VBox>
    </top>
    <center>
        <HBox spacing="40" alignment="TOP_CENTER" style="-fx-padding: 30;">

            <!-- GAUCHE : METEO + DATE + IMAGE -->
            <VBox spacing="20" alignment="TOP_CENTER">

                <!-- METEO + DATE -->
                <HBox spacing="20" alignment="CENTER_LEFT"
                      style="-fx-background-color: white;
                         -fx-padding: 20;
                         -fx-background-radius: 20;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <ImageView fx:id="weatherIcon" fitHeight="40" fitWidth="40" />
                    <VBox spacing="3">
                        <Label fx:id="temperatureLabel"
                               style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label fx:id="locationLabel"
                               style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" />
                    </VBox>
                    <VBox spacing="5" alignment="CENTER_LEFT">
                        <Label fx:id="dateLabel"
                               style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Label fx:id="dayLabel"
                               style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" />
                    </VBox>
                </HBox>

                <!-- IMAGE CENTRALE -->
                <VBox alignment="CENTER" spacing="10"
                      style="-fx-background-color: white;
                         -fx-padding: 20;
                         -fx-background-radius: 20;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 0);">
                    <ImageView fx:id="stateImage"
                               fitWidth="600"
                               fitHeight="400"
                               preserveRatio="true"
                               visible="false"
                               style="-fx-background-radius: 20;">
                        <effect>
                            <DropShadow color="#00000033" radius="8"/>
                        </effect>
                    </ImageView>
                </VBox>
            </VBox>

            <!-- TO-DO LIST -->
            <VBox spacing="20"
                  style="-fx-background-color: white;
                     -fx-padding: 30;
                     -fx-background-radius: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 0);"
                  prefWidth="400" maxWidth="400">

                <VBox spacing="5" alignment="CENTER">
                    <Label text="Ma Liste de Tâches"
                           style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label text="Gérez vos tâches quotidiennes"
                           style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
                </VBox>

                <HBox spacing="10">
                    <TextField fx:id="taskInput"
                               promptText="Ajouter une nouvelle tâche..."
                               style="-fx-background-color: #e9f1f4; -fx-background-radius: 10; -fx-padding: 10;" />
                    <Button text="+" onAction="#addTask"
                            style="-fx-background-color: #212529; -fx-text-fill: white; -fx-background-radius: 10; -fx-pref-width: 44px; -fx-pref-height: 44px;" />
                </HBox>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                    <VBox fx:id="taskList" spacing="10" style="-fx-background-color: transparent;" />
                </ScrollPane>
            </VBox>
        </HBox>
    </center>

</BorderPane>
