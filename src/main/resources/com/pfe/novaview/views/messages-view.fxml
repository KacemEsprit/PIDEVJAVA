<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pfe.nova.Controller.MessagesViewController"
            prefWidth="900" prefHeight="700"
            styleClass="messages-main-container">

    <stylesheets>
        <URL value="@../styles/messages-view.css"/>
    </stylesheets>

    <top>
        <VBox spacing="0" styleClass="messages-header">
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="header-top-bar">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Text text="Nova Messages" styleClass="app-title"/>
                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="settingsButton" styleClass="settings-button">
                    <graphic>
                        <FontAwesomeIconView glyphName="GEAR" size="16" styleClass="button-icon"/>
                    </graphic>
                </Button>
            </HBox>
            
            <HBox spacing="0" styleClass="channel-selector-container">
                <padding>
                    <Insets top="0" right="0" bottom="0" left="0"/>
                </padding>
                
                <!-- Add the ComboBox with the required fx:id -->
                <ComboBox fx:id="channelSelector" promptText="Select a channel" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="20" right="20" top="10" bottom="10"/>
                    </HBox.margin>
                </ComboBox>

                <!-- Add a button to create new channels -->
                <Button onAction="#createNewChannel" text="New Channel" styleClass="new-channel-button">
                    <HBox.margin>
                        <Insets right="20" top="10" bottom="10"/>
                    </HBox.margin>
                </Button>
                
                <!-- Add a refresh button -->
                <Button fx:id="refreshButton" onAction="#refreshChannels" styleClass="refresh-button">
                    <graphic>
                        <FontAwesomeIconView glyphName="REFRESH" size="14" styleClass="button-icon"/>
                    </graphic>
                    <HBox.margin>
                        <Insets right="20" top="10" bottom="10"/>
                    </HBox.margin>
                </Button>
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox spacing="10" styleClass="channels-sidebar" HBox.hgrow="NEVER">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Text text="Canaux" styleClass="sidebar-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="addChannelButton" onAction="#createNewChannel" styleClass="add-channel-button">
                    <graphic>
                        <FontAwesomeIconView glyphName="PLUS" size="12" styleClass="button-icon"/>
                    </graphic>
                </Button>
            </HBox>
            
            <ScrollPane fitToWidth="true" styleClass="channels-list-scroll" VBox.vgrow="ALWAYS">
                <VBox fx:id="channelsListContainer" spacing="5" styleClass="channels-list"/>
            </ScrollPane>
        </VBox>
    </left>
    
    <center>
        <VBox HBox.hgrow="ALWAYS" styleClass="chat-container">
            <HBox fx:id="selectedChannelHeader" styleClass="selected-channel-header" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Text fx:id="selectedChannelName" text="Sélectionnez un canal" styleClass="channel-name"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="onlineUsersCount" text="0 utilisateurs en ligne" styleClass="online-users-count"/>
            </HBox>
            
            <StackPane VBox.vgrow="ALWAYS">
                <VBox fx:id="messagesContainer" spacing="0" styleClass="messages-area" visible="false" managed="false"/>
                
                <VBox fx:id="noChannelSelectedContainer" alignment="CENTER" spacing="20" styleClass="no-channel-container">
                    <FontAwesomeIconView glyphName="COMMENTS" size="60" styleClass="no-channel-icon"/>
                    <Text text="Sélectionnez un canal pour commencer à discuter" styleClass="no-channel-text"/>
                    <Button text="Créer un nouveau canal" onAction="#createNewChannel" styleClass="create-channel-button"/>
                </VBox>
            </StackPane>
        </VBox>
    </center>
</BorderPane>

   