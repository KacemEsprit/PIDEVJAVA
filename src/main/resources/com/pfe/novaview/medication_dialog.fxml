<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pfe.nova.Controller.MedicationDialogController"
      spacing="15" style="-fx-background-color: white; -fx-padding: 20;">
    
    <Label text="💊 Détails du Médicament" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4, 0, 0, 2);"/>
    
    <!-- Image preview section -->
    <VBox alignment="CENTER" spacing="10">
        <ImageView fx:id="medicationImageView" fitHeight="150" fitWidth="200" preserveRatio="true"/>
        <Button text=" Choisir une image" onAction="#handleChooseImage" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);
                -fx-padding: 8 15; -fx-cursor: hand;"/>
    </VBox>
    
    <GridPane vgap="15" hgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <Label text="📝 Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" 
               style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-font-size: 14px;"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   style="-fx-background-radius: 5;"/>
        
        <Label text="📋 Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" 
               style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-font-size: 14px;"/>
        <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                  wrapText="true" prefRowCount="3" style="-fx-background-radius: 5;"/>
        
        <Label text="📦 Stock:" GridPane.columnIndex="0" GridPane.rowIndex="2" 
               style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-font-size: 14px;"/>
        <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                   style="-fx-background-radius: 5;"/>
        
        <Label text="💰 Prix:" GridPane.columnIndex="0" GridPane.rowIndex="3" 
               style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-font-size: 14px;"/>
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                   style="-fx-background-radius: 5;"/>
    </GridPane>
    
    <HBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">
    
    <Button text="💾 Enregistrer" onAction="#handleSave" 
            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-padding: 8 15;
            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1); -fx-cursor: hand;"
            prefWidth="120"/>
    
    <Button text="❌ Annuler" onAction="#handleCancel" 
            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-padding: 8 15;
            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1); -fx-cursor: hand;"
            prefWidth="120"/>
</HBox>

</VBox>