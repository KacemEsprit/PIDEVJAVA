<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pfe.nova.Controller.AdminPostsManagementController"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="/com/pfe/novaview/styles/admin-styles.css">
    
    <left>
        <VBox styleClass="admin-sidebar" prefWidth="220" spacing="10">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            
            <Label text="NOVA Admin" styleClass="admin-title">
                <font>
                    <Font name="System Bold" size="18"/>
                </font>
            </Label>
            
            <Separator/>
            
            <Label text="CONTENT MANAGEMENT" styleClass="sidebar-section-header"/>
            
            <Button fx:id="pendingPostsBtn" text="Pending Posts"
                    onAction="#showPendingPosts"
                    styleClass="sidebar-button">
                <graphic>
                    <Label text="⏳" style="-fx-font-size: 14px;"/>
                </graphic>
            </Button>
            
            <Button fx:id="approvedPostsBtn" text="Approved Posts"
                    onAction="#showApprovedPosts"
                    styleClass="sidebar-button">
                <graphic>
                    <Label text="✓" style="-fx-font-size: 14px;"/>
                </graphic>
            </Button>
            
            <Button fx:id="reportedCommentsBtn" text="Reported Comments"
                    onAction="#showReportedComments"
                    styleClass="sidebar-button, warning-button">
                <graphic>
                    <Label text="⚠" style="-fx-font-size: 14px;"/>
                </graphic>
            </Button>
            
            <Separator/>
            
            <Label text="STATISTICS" styleClass="sidebar-section-header"/>
            
            <Button fx:id="statsBtn" text="Dashboard"
                    onAction="#showDashboard"
                    styleClass="sidebar-button">
                <graphic>
                    <Label text="📊" style="-fx-font-size: 14px;"/>
                </graphic>
            </Button>
            
            <Separator/>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- Back to dashboard button -->
            <Button fx:id="backToDashboardBtn" text="Back to Dashboard" 
                    onAction="#navigateToDashboard"
                    styleClass="sidebar-button, exit-button">
                <graphic>
                    <Label text="↩" style="-fx-font-size: 14px;"/>
                </graphic>
            </Button>
        </VBox>
    </left>
    
    <center>
        <BorderPane fx:id="contentArea">
            <top>
                <HBox styleClass="admin-header" alignment="CENTER_LEFT" spacing="15">
                    <padding>
                        <Insets top="15" right="20" bottom="15" left="20"/>
                    </padding>
                    
                    <Label fx:id="contentTitle" text="Admin Dashboard" styleClass="content-title"/>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <TextField fx:id="searchField" promptText="Search..." styleClass="search-field"/>
                    
                    <Button fx:id="refreshBtn" text="Refresh"
                            onAction="#refreshContent"
                            styleClass="action-button">
                        <graphic>
                            <Label text="🔄" style="-fx-font-size: 14px;"/>
                        </graphic>
                    </Button>
                </HBox>
            </top>
            
            <center>
                <ScrollPane fx:id="contentScrollPane" fitToWidth="true" styleClass="content-scroll">
                    <VBox fx:id="contentContainer" spacing="15" styleClass="content-container">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                    </VBox>
                </ScrollPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>