<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pfe.nova.Controller.RapportAppointmentController"
      alignment="CENTER" spacing="20" style="-fx-padding: 20;">

    <Label text="Create Rapport" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextArea fx:id="rapportTextArea" prefHeight="200" prefWidth="300" wrapText="true"/>

    <HBox spacing="10">
        <Button fx:id="saveButton" text="Save" onAction="#handleSaveRapport"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>

</VBox>