<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pfe.nova.Controller.ViewRapportsController">

    <SplitPane dividerPositions="0.35" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Left Side -->
        <VBox spacing="20" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Search Section -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="searchPatientField" promptText="Rechercher un patient..." style="-fx-background-radius: 20; -fx-padding: 10 15; -fx-background-color: #f5f5f5;                                   -fx-prompt-text-fill: #757575;" HBox.hgrow="ALWAYS" />
                <Button style="-fx-background-radius: 20; -fx-background-color:#2980b9;                                           -fx-text-fill: white; -fx-font-size: 14;" text="ðŸ”" />
            </HBox>

            <!-- Title -->
            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Liste des Patients" />

            <!-- Scrollable Patient Cards -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 0;" VBox.vgrow="ALWAYS">
                <VBox fx:id="patientCardsContainer" spacing="15" style="-fx-padding: 10;">
                    <!-- Patient Cards dynamically injected here -->
                </VBox>
            </ScrollPane>
        </VBox>

        <!-- Right Side -->

        <StackPane fx:id="contentArea">
            <VBox spacing="20" style="-fx-background-color: #ffffff;">

            </VBox>
        </StackPane>

    </SplitPane>
</AnchorPane>
