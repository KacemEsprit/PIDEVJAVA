<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.StackPane?>
<StackPane style="-fx-text-fill: #2980b9;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pfe.nova.Controller.ViewSessionsController">


    <VBox spacing="20.0" alignment="TOP_CENTER"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          style="-fx-padding: 20;">

        <VBox spacing="10">

            <HBox alignment="CENTER" style="-fx-background-color: #2980b9; -fx-padding: 20;">
                <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="Session List  " />
            </HBox>



        </VBox>
        <!-- Search and Sort Section -->


        <ScrollPane fitToWidth="true"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <content>
                <FlowPane fx:id="sessionFlow"
                          hgap="20.0" vgap="20.0"
                          style="-fx-background-color: transparent;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>

    </VBox>
</StackPane>