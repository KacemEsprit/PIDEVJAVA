<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pfe.nova.Controller.ViewSessionsController"
            prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: #f5f5f5;">

    <VBox spacing="20" alignment="TOP_CENTER"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <Label text="Liste des Sessions de Traitement" style="-fx-text-fill:#2980b9;">
            <font><Font name="Arial Bold" size="36"/></font>
            <padding><Insets top="20"/></padding>
        </Label>

        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <GridPane fx:id="sessionGrid" hgap="20" vgap="20">
                <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>
            </GridPane>
        </ScrollPane>
    </VBox>
</AnchorPane>
